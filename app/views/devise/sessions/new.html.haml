%section.worldMap
  %header#sectionHeader
    %hgroup.connexionHeader
      %h1
        CONNEXION
  %nav#secondaryNav
    %div#secondaryNavContainer
      = render partial: "devise/shared/links"
  .theContent
    = simple_form_for resource, url: session_path(resource), html: { class: "woodForm smallForm"} do |f|
      %fieldset
        %legend Connexion
        = f.input :username, required: false, autofocus: "autofocus"
        = f.input :password, required: false
        - if devise_mapping.rememberable?
          = f.check_box :remember_me
          = f.label :remember_me, "Connexion automatique"
        = f.button :submit, "Se connecter"
