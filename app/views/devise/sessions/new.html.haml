%section#connection.fullwidth
  %hgroup.fullwidth
    %h1
      %span#arabesqueLeft &nbsp;
      CONNEXION
      %span#arabesqueRight &nbsp;
  %nav#connectionNav.fullwidth
    = render :partial => "devise/shared/links"
%aside#connectionAside.fullwidth
  = simple_form_for resource, :url => session_path(resource), :html => {:id => "connectionForm"} do |f|
    %fieldset
      %legend Connexion
      = f.input :username, :required => false, :autofocus => "autofocus"
      = f.input :password, :required => false
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me, "Connexion automatique"
      = f.button :submit, "Se connecter"
