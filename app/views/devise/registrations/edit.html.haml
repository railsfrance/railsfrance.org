%section.worldMap
  %header#sectionHeader
    %hgroup
      %h1
        %span 
          Mon
        compte
  %nav#secondaryNav
    %div#secondaryNavContainer
      %ul
        %li
          = link_to "Mon profil", user_path(resource), "data-skip-pjax" => "true", :class=> "buttonBlue"
        %li
          = link_to "Deconnexion", destroy_user_session_path, :method => :delete, "data-skip-pjax" => "true", :class=> "buttonBlue"
        %li
          = link_to "Annuler mon compte", registration_path(resource_name), :confirm => "Etes-vous sûr?", "data-skip-pjax" => "true", :method => :delete, :class=> "buttonBlue"
  .theContent
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "woodForm normalForm" }) do |f|
      %fieldset
        %legend Mon compte
        #newUserLeft
          = f.input :email,:autofocus => "autofocus"
          = f.input :github
          = f.input :twitter
          = f.input :website
          = f.input :city
        #newUserRight
          = f.input :postal_code
          = f.input :password, :required => false, :placeholder => "Laisser vide si vous ne désirez pas le changer"
          = f.input :password_confirmation, :required => false
          = f.input :current_password, :required => true, :placeholder => "Requis pour confirmer les changements"
          %br
          %br
          = f.button :submit, "Modifier"
