%section.worldMap
  %header#sectionHeader
    %hgroup.mapHeader
      %h1
        %span 
          La
        Carte
  %nav#secondaryNav
    %div#secondaryNavContainer
      %form{:id => "map_filters"}
        %ul
          - [[:jobs,"jobs"],[:users,"utilisateurs"],[:events,"événements"]].each do |filter|
            %li
              %label
